{
  "name": "fileguard-scanner",
  "version": "1.0.0",
  "description": "Advanced Malware Detection & Analysis",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.fileguard.scanner",
    "productName": "FileGuard Scanner",
    "files": [
      "main.js",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "./server.exe",
        "to": "server.exe"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
